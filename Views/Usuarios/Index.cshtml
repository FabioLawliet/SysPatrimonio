@model IEnumerable<SysPatrimonio.Models.DbUsuario>

@{
    ViewData["Title"] = "Index";
}

<h1>Usuários</h1>
<p>
    @using (Html.BeginForm())
    {
        <text>Nome</text>@Html.DropDownList("Nome", new SelectList(ViewBag.Nome))
        <text>Login</text>@Html.DropDownList("Login", new SelectList(ViewBag.Login))
        <input type="submit" value="Procurar"/>
    }
</p>

<p class="pull-right">
    <a asp-action="Create">Cadastrar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th class="col-md-3">
                Nome
            </th>
            <th class="col-md-3">
                Login
            </th>
            <th class="col-md-2">
                Senha
            </th>
            <th class="col-md-1">
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.senha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                <div class="row pull-right formBotoes">
                    <div class="col-md-12">
                        <a asp-action="Edit" asp-route-id="@item.id">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.id">Detalhes</a> |
                        <a asp-action="Delete" asp-route-id="@item.id">Deletar</a>
                    </div>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
