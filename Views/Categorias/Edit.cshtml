@model SysPatrimonio.Models.DbCategoria

@{
    ViewData["Title"] = "Edit";
}

<h1>Categorias</h1>
<h3>Editar</h3>
<hr />
<div class="row">
    <form asp-action="Edit">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-12">
                <label asp-for="descricaocategoria" class="control-label">Descrição</label>
                <input asp-for="descricaocategoria" class="form-control" />
                <span asp-validation-for="descricaocategoria" class="text-danger"></span>
            </div>
            <div class="form-group pull-right">
                <input type="submit" value="Salvar Alterações" class="btn btnCad btn-success" />
                <a asp-action="Index" class="btn btnCad btn-primary">Voltar</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
