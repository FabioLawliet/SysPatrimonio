@model SysPatrimonio.Models.DbDepartamento

@{
    ViewData["Title"] = "Create";
}

<h1>Departamentos</h1>
<h3>Cadastrar</h3>
<div class="form-group">
 @*  htmlHelpers 
    <!– <text>Local</text>@Html.DropDownList("Local", new SelectList(ViewBag.Local)) ->
     Razor 
    <select asp-items=@ViewBag.Local2 asp-for="idlocal" name="nomelocal" class="form-control"></select> 
