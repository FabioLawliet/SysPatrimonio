@model SysPatrimonio.Models.DtoPatrimonio

@{
    ViewData["Title"] = "Edit";
}

<h1>Patrimonio</h1>
<h3>Editar</h3>
<hr />
<div class="row">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row rowForm">
                <div class="form-group col-md-2">
                    <label asp-for="numetiqueta" class="control-label">Núm. Etiqueta</label>
                    <input asp-for="numetiqueta" class="form-control" />
                    <span asp-validation-for="numetiqueta" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="nomepatrimonio" class="control-label">Nome</label>
                    <input asp-for="nomepatrimonio" class="form-control" />
                    <span asp-validation-for="nomepatrimonio" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="descricaopatrimonio" class="control-label">Descrição</label>
                    <input asp-for="descricaopatrimonio" class="form-control" />
                    <span asp-validation-for="descricaopatrimonio" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="marcamodelo" class="control-label">Marca/Modelo</label>
                    <input asp-for="marcamodelo" class="form-control" />
                    <span asp-validation-for="marcamodelo" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="numserie" class="control-label">Núm. Série</label>
                    <input asp-for="numserie" class="form-control" />
                    <span asp-validation-for="numserie" class="text-danger"></span>
                </div>
            </div>
            <div class="row rowForm">
                <div class="form-group col-md-3">
                    <label asp-for="idcategoria" class="control-label">Nome Categoria</label>
                    <select asp-items=@ViewBag.Categoria asp-for="idcategoria" name="idcategoria" class="form-control"></select>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="idlocal" class="control-label">Nome Local</label>
                    <select asp-items=@ViewBag.Local asp-for="idlocal" name="idlocal" class="form-control"></select>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="iddepartamento" class="control-label">Nome Deparamento</label>
                    <select asp-items=@ViewBag.Departamento asp-for="iddepartamento" name="iddepartamento" class="form-control"></select>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="idfornecedor" class="control-label">Nome Fornecedor</label>
                    <select asp-items=@ViewBag.Fornecedor asp-for="idfornecedor" name="idfornecedor" class="form-control"></select>
                </div>
            </div>
            <div class="row rowForm" >
                <div class="form-group col-md-2">
                    <label asp-for="dataaquisicao" class="control-label">Data Aquisição</label>
                    <input asp-for="dataaquisicao" class="form-control" />
                    <span asp-validation-for="dataaquisicao" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="databaixa" class="control-label">Data Baixa</label>
                    <input asp-for="databaixa" class="form-control" />
                    <span asp-validation-for="databaixa" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="datagarantia" class="control-label">Data Garantia</label>
                    <input asp-for="datagarantia" class="form-control" />
                    <span asp-validation-for="datagarantia" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="situacao" class="control-label">Situação</label>
                    <input asp-for="situacao" class="form-control" />
                    <span asp-validation-for="situacao" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="numnf" class="control-label">Núm. NF</label>
                    <input asp-for="numnf" class="form-control" />
                    <span asp-validation-for="numnf" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="valorpatrimonio" class="control-label">Valor</label>
                    <input asp-for="valorpatrimonio" type="text" class="form-control" />
                    <span asp-validation-for="valorpatrimonio" class="text-danger"></span>
                </div>
            <div class="form-group pull-right">
                <input type="submit" value="Salvar Alterações" class="btn btnCad btn-success" />
                <a asp-action="Index" class="btn btnCad btn-primary">Voltar</a>
            </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
