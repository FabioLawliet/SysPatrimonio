@model SysPatrimonio.Models.DtoDepartamento

@{
    ViewData["Title"] = "Delete";
}

<h1>Departamentos</h1>
<h3>Deletar</h3>
<div>
    <hr />
    <dl class="row rowForm">
        <dt class = "col-sm-2">
            Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nomedepartamento)
        </dd>
        <dt class = "col-sm-2">
            Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.descricaodepartamento)
        </dd>
        <dt class = "col-sm-2">
            Nome Local
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nomelocal)
        </dd>
    </dl>
    
	<form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Deletar" class="btn btnCad btn-danger" />
        <a asp-action="Index" class="btn btnCad btn-primary">Voltar</a>
    </form>
</div>
