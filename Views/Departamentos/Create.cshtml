</div>
<hr />
<div class="row">
    <form asp-action="Create">
        <div class="row rowForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-4">
                <label asp-for="nomedepartamento" class="control-label">Nome</label>
                <input asp-for="nomedepartamento" class="form-control" />
                <span asp-validation-for="nomedepartamento" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="descricaodepartamento" class="control-label">Descrição</label>
                <input asp-for="descricaodepartamento" class="form-control" />
                <span asp-validation-for="descricaodepartamento" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="idlocal" class="control-label">Id Local</label>
                <select asp-items=@ViewBag.Local asp-for="idlocal" name="idlocal" class="form-control"></select>
            </div>
            <div class="form-group pull-right">
                <input type="submit" value="Cadastrar" class="btn btnCad btn-success" /> 
                <a asp-action="Index" class="btn btnCad btn-primary">Voltar</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
